
<%-include ../partials/header%>
<%- include('../partials/menu2',{session})%>
<br><br><br>
<h1>Issue Of The Day:</h1>
<% dataIssue.forEach(issue=>{%>
<br><br>
	<ul class="list-group-item">
	  <li class="list-group-item">
			<div class="row">
				<div class="col-lg-9">
					<%=issue.title%>
				</div>
				<div class="col-lg-offset-3">
					<a class="btn btn-outline-secondary" href="/issue/respond/<%=issue.id%>" role="button">Respond Here</a>
					Citizen score : <%=issue.vote%> <%if(issue.vote>0){%><span class="glyphicon glyphicon-chevron-up"></span>
					<%}else if(issue.vote<0){%>
						<span class="glyphicon glyphicon-chevron-down"></span>
					<%}%>
				</div>
			</div>
		</li>
	</ul>
	<%})%>


<%-include ../partials/footer%>
